<h1><%= @bucket.name %></h1>
<%= button_to "Create Task", new_task_path, method: :get %>

<h3>Pending Tasks</h3>
<ul>
    <% @bucket.tasks_by_status("Pending").each do |task| %>
        <li><%= link_to task.name, task_path(task) %></li>
    <% end %>
</ul>

<h3>Completed Tasks</h3>
<ul>
    <% @bucket.tasks_by_status("Completed").each do |task| %>
        <li><%= link_to task.name, task_path(task) %></li>
    <% end %>
</ul>